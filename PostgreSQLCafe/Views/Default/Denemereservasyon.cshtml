@model PostgreSQLCafe.Dto.ReservationDto.CreateReservationDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rezervasyon Formu</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Rezervasyon Formu</h2>
        <form asp-action="Denemereservasyon" asp-controller="Default" method="post">
            <div class="form-group">
                <label for="Name">Ad</label>
                <input type="text" class="form-control" id="Name" asp-for="Name" required>
            </div>
            <div class="form-group">
                <label for="Mail">E-Posta</label>
                <input type="email" class="form-control" id="Mail" asp-for="Mail" required>
            </div>
            <div class="form-group">
                <label for="PhoneNumber">Telefon Numarası</label>
                <input type="tel" class="form-control" id="PhoneNumber" asp-for="PhoneNumber" required>
            </div>
            <div class="form-group">
                <label for="GuestCount">Misafir Sayısı</label>
                <input type="number" class="form-control" id="GuestCount" asp-for="GuestCount" required>
            </div>
            <div class="form-group">
                <label for="Date">Tarih</label>
                <input type="date" class="form-control" id="Date" asp-for="Date" required>
            </div>
            <div class="form-group">
                <label for="Time">Saat</label>
                <input type="time" class="form-control" id="Time" asp-for="Time" required>
            </div>
            <div class="form-group">
                <label for="ReservationMessage">Mesaj</label>
                <textarea class="form-control" id="ReservationMessage" asp-for="ReservationMessage" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
